
@{
    ViewBag.Title = "DeleteDonorError";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr />
<div class="well well-lg">
    <div style="display: inline-block">
        <h4>Donor Delete Error</h4>
    </div>
    <div style="display: inline-block;float:right">
        @Html.ActionLink("back", "Details", new { id = ViewBag.Id }, new { @class = "btn btn-default", @style = "background-color:#0096d7;color:white" })
    </div>
</div>
<hr />

<div class="panel panel-default">
    <div class="panel-heading" style="background-color:#E31B23;color:white;">Delete Error!</div>
    <div class="panel-body">
        Error Details:<br />You have attempted to delete a user that has donations or notes.
        <br />The system requires all linked donations and notes to be removed prior to deleting a donor<br />
        Click the button below to return to the donor's details.<br /><br />
@Html.ActionLink("back", "Details", new { id = ViewBag.Id }, new { @class = "btn btn-default", @style = "background-color:#0096d7;color:white" })    </div>
</div>

