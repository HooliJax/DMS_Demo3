                            @Html.LabelFor(model => model.donor.Zipcode, "Zipcode", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.donor.Zipcode, new { htmlAttributes = new { @class = "form-control", @style = "width:30%" } })
                                @Html.ValidationMessageFor(model => model.donor.Zipcode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr />
                        <div style="text-align: center;">
                            <input type="submit" value="" class="btn btn-default" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="form-group">

                        </div>
                    </td>
                </tr>
            </table>
        </div>
    }
