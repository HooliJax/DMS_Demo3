@model IEnumerable<testDMS.Models.GLS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .panel > .panel-heading {
    background-image: none;
    background-color: #0096d7;
    color: white;
}
</style>
<hr />
<div class="well well-lg">
    <div style="display: inline-block">
        <h4>GL Code Index</h4>
    </div>
    <div style="display: inline-block;float:right">
        @Html.ActionLink("Back to Donations", "Index", "Donations", null, new { @class = "btn btn-default", @style = "background-color:#0096d7;color:white" })
    </div>
</div>
<div style="display: inline-block">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default", @style = "background-color:#0096d7;color:white" })


</div>
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading">GL Codes Index</div>
    <div class="panel-body">
        <table class="table table-striped" id="table" border="0" style="max-width:90%;margin:auto;">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GL)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.GLID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>