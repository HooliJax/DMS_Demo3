@model testDMS.Models.AspNetUsers

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td.lines {
        padding-bottom: 5px;
        padding-top: 5px;
        border-bottom: solid lightgray;
    }

    th {
        padding: 15px;
        text-align: center;
        width: 50%;
        background-color: #0096D7;
    }

    td img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    table {
        border-collapse: initial;
    }
</style>
<hr />
<div class="well well-lg">
    <div style="display: inline-block">
        <h4>Review and Delete User</h4>
    </div>
    <div style="display: inline-block;float:right">
        @Html.ActionLink("Back Account List", "Index", "Account", null, new { @class = "btn btn-default", @style = "background-color:#0096d7;color:white" })
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading" style="background-color:#0096d7"><h4>Delete user @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)?</h4></div>
    <div class="panel-body">
        <div>

            <hr />
            <table border="0">
                <tr><td class="lines" style="width:15%">Email:  </td><td class="lines" style="width:25%">@Html.DisplayFor(model => model.Email)</td><td rowspan="3"><img src="~/Images/remove-user-icon.jpg" style="max-width:40%" alt="remove user icon" /></td></tr>
                <tr><td class="lines">Name:  </td><td class="lines">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</td></tr>
                <tr><td class="lines">User Role:  </td><td class="lines">@Html.DisplayFor(model => model.NewRole)</td></tr>
            </table>
            <br />
            @Html.ActionLink("Edit", "Edit", new { UserName = Model.UserName }, new { @class = "btn btn-default", @style = "background-color:#0096d7;color:white" }) 

            <div style="display: inline-block;float:right">
                @using (Html.BeginForm("Delete", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Email)
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Delete User" class="btn btn-default" style="background-color:#E31B23" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

