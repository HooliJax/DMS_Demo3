<style>
    .dateInput {
        width: 20%;
    }
    th {
        text-align:center;
    }
</style>
<hr />
<div class="well well-lg">
    <h4 style="display: inline-block">Donation Information</h4>

    <div style="display: inline-block;float:right">
        @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-default", @style = "background-color:#0096d7;color:white" })
    </div>
</div>

<table class="table table-striped" border="0">
    <tr style="background-color:#0096D7">
        <th style="width:25%">
            @Html.DisplayName("Donor")
        </th>
        <th style="width: 15%">
            @Html.DisplayName("Amount")
        </th>
        <th style="width: 30%">
            @Html.DisplayName("Date")
        </th>
        <th style="width: 15%">
            @Html.DisplayName("Department")
        </th>
        <th style="width: 15%">
            @Html.DisplayName("GL Code")
        </th>
    </tr>
    <tr>
        <td>
            @*Need to update the controller to get this working*@
            <div style="display: inline-block;text-align:left;">
                @using (Html.BeginForm("Search", "Chart", FormMethod.Get))
                {
                    <p>
                        @Html.AntiForgeryToken()
                        @Html.TextBox("searchString")&nbsp
                        <input type="submit" value="Filter" />
                    </p>
                }
            </div>
        </td>
        <td>
            <div style="display: inline-block; text-align:left;">
                @using (Html.BeginForm("AmountSearch", "Chart", FormMethod.Post))
                {
                <select class="form-control" style="width:auto;" id="Amount" name="Amount" onchange="redirect(this.value)">
                    <option selected="selected" value="">Choose Amount</option>
                    <option value="0,100">0 - 100</option>
                    <option value="101,500">101 - 500</option>
                    <option value="501,1000">501 - 1000</option>
                    <option value="1000,2000">1000 - 2000</option>
                    <option value="2001,4000">2001 - 4000</option>
                    <option value="4001">4001 - 7000</option>
                    <option value="7001,10000">7001 - 10,000</option>
                    <option value="10000,10000000">10,000+</option>
                </select>
                }
            </div>
        </td>
        <td style="padding-left:3%">
           Date Range: <input type="text" class="dateInput form-control" /> to <input type="text"  class="dateInput form-control"/>
        </td>
        <td>
            @Html.DropDownList("Department", null, "Department", htmlAttributes: new { @class = "form-control" })
        </td>
        <td>
            @Html.DropDownList("GL", null, "GL", htmlAttributes: new { @class = "form-control" })
        </td>
    </tr>


    @foreach (var item in Model.Donations)
    {
        var displayName = item.DONOR.FName;
        if (item.DONOR.FName == null && item.DONOR.LName == null)
        {
            displayName = item.DONOR.CompanyName;
        }
        else if (item.DONOR.LName == null && item.DONOR.FName != null)
        {
            displayName = item.DONOR.FName + " - " + item.DONOR.CompanyName;
        }
        else
        {
            displayName = item.DONOR.LName + ", " + item.DONOR.FName + " - " + item.DONOR.CompanyName;
        }

        <tr>
            <td style="text-align:left;padding-left:3%">
                @Html.DisplayName(displayName)
            </td>
            <td style="padding-left:5%">
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td style="padding-left:9%">
                @Html.DisplayFor(modelItem => item.DateRecieved)
            </td>
            <td style="padding-left:7%">
                @Html.DisplayFor(modelItem => item.CODES.Department)
            </td>
            <td style="padding-left:7%">
                @Html.DisplayFor(modelItem => item.CODES.GL)
            </td>
        </tr>
    }
</table>
